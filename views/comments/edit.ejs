<%- include ('../partial/header') -%>
<div class="container">
  <h1 style="text-align: center;">Edit Comment</h1>
  <div class="row">
    <div class="" style="width: 30%; margin: 30px auto;">
      <form action="/campground/<%= campground_id %>/comments/<%= comment._id %>?_method=POST  " method="POST">
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            name="comment[content]"
            value="<%= comment.content %> "
          />
        </div>
        <div class="form-group">
          <button  class="btn btn-lg btn-primary btn-block">Update</button>
        </div>
      </form>
     
    </div>
  </div>
</div>
